@using WebApplication.Web.Models.Account;
@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<h2 id="header" class="h2">Register</h2>

<form id="user-login"class="form-horizontal" asp-controller="account" asp-action="register" method="post">
    <div class="form-group">
       <label class="control-label col-sm-5" asp-for="Username">Username</label>
       <input asp-for="Username" />
    </div>  
    <div class="form-group">
       <label class="control-label col-sm-5"asp-for="Email">Email</label>
       <input type="email" asp-for="Email" />
       <span asp-validation-for="Email"></span>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-5" asp-for="Password">Password</label>
        <input type="password" asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-5" asp-for="ConfirmPassword">Confirm Password</label>
        <input type="password" asp-for="ConfirmPassword" />
        <span asp-validation-for="ConfirmPassword"></span>
    </div>
    <div>
        <input type="hidden" asp-for="Salt" />
    </div>
    <div>
        <input type="hidden" asp-for="Role" />
    </div>
    <div class="form-group">
        <label class="control-label col-sm-5" asp-for="Zipcode">Zip Code</label>
        <input asp-for="Zipcode" />
    </div>
    <div class="form-group">
        <div class="col-sm-offset-5 col-sm-10" >
            <input type="submit" value="Register" class="btn btn-default, button" />
        </div>
    </div>
</form>
<style>
    .h2 {
        display: flex;
        justify-content: center;
        width: auto;
    }

    .button {
        background-color: dodgerblue;
        color: white;
    }
</style>