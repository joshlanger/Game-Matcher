@using WebApplication.Web.Models.Account;
@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
}
<div id="container" class="container-fluid border-color">
    <h2 id="header" class="h2 font-color">Register</h2>

    <form id="user-login" class="form-horizontal" asp-controller="account" asp-action="register" method="post">
        <div class="form-group col-md-1">
            <label class="control-label col-sm-5 font-color" asp-for="Username">Username:</label>
            <div class="col-md-11">
                <input class="form-control" asp-for="Username" />
                <span asp-validation-for="Username"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-11">
                <label class="control-label col-sm-5 font-color" asp-for="Email">Email:</label>
                <input class="form-control" type="email" asp-for="Email" />
                <span asp-validation-for="Email"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-11">
                <label class="control-label col-sm-5 font-color" asp-for="Password">Password:</label>
                <input class="form-control" type="password" asp-for="Password" />
                <span asp-validation-for="Password"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-11">
                <label class="control-label col-sm-5 font-color" asp-for="ConfirmPassword">Confirm Password:</label>
                <input class="form-control" type="password" asp-for="ConfirmPassword" />
                <span asp-validation-for="ConfirmPassword"></span>
            </div>
        </div>
        <div>
            <input type="hidden" asp-for="Salt" />
        </div>
        <div>
            <input type="hidden" asp-for="Role" />
        </div>
        <div class="form-group">
            <div class="col-md-11">
                <label class="control-label col-sm-5 font-color" asp-for="Zipcode">Zip Code:</label>
                <input class="form-control" asp-for="Zipcode" />
                <span asp-validation-for="Zipcode"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10 font-color">
                <input type="submit" value="Register" class="btn btn-default, button" />
            </div>
        </div>
    </form>
</div>
<style>
    .h2 {
        display: flex;
        justify-content: center;
        width: auto;
    }
    .border-color {
        border: ridge;
        border-color: #00f6ed;
    }
    #container {
        margin-top: 200px;
        background-color: darkslateblue;
        width: 25%;
        height: 50%;
        box-shadow: 05px 05px 05px purple;
    }
    .button{
        display: flex;
        align-items: center;
        background-color: magenta;
        color: white
    }
    .font-color {
        text-align: left;
        color: magenta;
    }
</style>
