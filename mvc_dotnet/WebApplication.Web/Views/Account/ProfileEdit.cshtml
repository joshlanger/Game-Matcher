@using WebApplication.Web.Models.Account;
@model ProfileViewModel
@{
    ViewData["Title"] = "Profile";
}

@{
    if (TempData["Status"] != null)
    {
        <h1>@TempData["Status"]</h1>

    };
}



<div>
    <a asp-area="" asp-controller="Account" asp-action="ProfileCreate"><i class="far fa-edit pull-left img-rounded"></i> Create New Profile</a>
</div>
<div>
    <a asp-area="" asp-controller="Account" asp-action="ProfileEdit"><i class="far fa-edit pull-left img-rounded"></i> Edit Existing Profile</a>
</div>
<form id="container" class="col-md-12 border-color" asp-controller="Account" asp-action="ProfileEdit" method="post">
            <input type="hidden" asp-for="UserId" />
            <input type="hidden" asp-for="Username" />
            <input type="hidden" asp-for="AvatarName" />
       
        <div class="form-group">
                <label class="margin font-color" asp-for="UserBio">Bio: </label>
                <input type="text" class="form-control" asp-for="UserBio" />
        </div>
        <div class="form-group">
            <label class="margin font-color" asp-for="GamingExperience">Gaming Experience: </label>
            <select asp-for="GamingExperience" asp-items="ProfileViewModel.ExperienceLevel"></select>
        </div>
        <div class="form-group">
            <label class="margin font-color" asp-for="GamesSelected">Games I Play: </label>
            <partial name="_GamesListView" model="Model" />
        </div>
        <div class="form-group">
            <label class="margin font-color" asp-for="GenresSelected">Genres I Like: </label>
            <partial name="_GenresListView" model="Model" />
        </div>
        <div class="form-group">
            <label class="margin font-color"asp-for="ContactPreference">Contact Preference: </label>
            <input asp-for="ContactPreference"/>
        </div>
        <div>
            <label class="margin font-color"asp-for="OtherInterests">Other Interests: </label>
            <input asp-for="OtherInterests"/>
        </div>
        <div class="form-group">
            <label class="margin col-md-4 font-color" asp-for="IsPrivate">Make Profile Private: </label>
            <input asp-for="IsPrivate"/>
        </div>
        <div>
            <div>
                <input type="submit" value="Publish Profile" class="btn btn-default, button" />
            </div>
        </div>
</form>



<style>

    p {
        font-size: 16px;
    }

    .margin {
        margin-bottom: 45px;
    }
    .font-color {
        color: deepskyblue;
        font-weight: 600;
    }
    .border-color {
        border: ridge;
        border-color: #00f6ed;
    }
    #container{
        padding-top: 5%;
        padding-bottom: 5%;
        margin-top: 35px;
        background-color: purple;
        width: 65%;
        height: auto;
        box-shadow: 05px 05px 05px purple;
    }

    #navbar {
        padding-top: 15px;
        padding-bottom: 15px;
        border: 0;
        border-radius: 0;
        margin-bottom: 0;
        font-size: 12px;
        letter-spacing: 5px;
    }

    #navbar-nav li a:hover {
        color: #FF7B00 !important; /* Heat Wave */
    }
</style>
