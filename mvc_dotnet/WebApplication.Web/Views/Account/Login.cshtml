@using WebApplication.Web.Models.Account;
@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}


@{
    if (TempData["Status"] != null)
    {
        <h4 class="font-color2 font-family">@TempData["Status"]</h4>

    };
}
<style> #header { display: none } </style>
<div id="container" class="container-fluid border-color">
<h2 class="h2 font-color">Login</h2>

<form class="form-horizontal" asp-controller="account" asp-action="login" method="post">

    <div class="form-group">
        <label id="labels" class="col-sm-1 col-md-1 col-lg-1 control-label font-color" asp-for="Email">Email:</label>
        <div class="col-sm-10 col-md-10 col-lg-10">
            <input class="form-control" type="email" asp-for="Email"/>
            <span asp-validation-for="Email"></span>
        </div>
    </div>
    <div class="form-group">
        <label id="labels" class="col-sm-1 col-md-1 col-lg-1 control-label font-color" asp-for="Password">Password:</label>
        <div class="col-sm-10 col-md-10 col-lg-10">
            <input id="fields" class="form-control" type="password" asp-for="Password"/>
            <span asp-validation-for="Password"></span>
        </div>
        
    </div>
    <div class="form-group">
        <div class="col-sm-offset-1 col-md-offset-1 col-lg-offset-2">
            <div>
                <label class="control-label">
                    <input type="submit" value="Login" class="btn btn-default, button" />
                </label>
                <button asp-area="" class="btn btn-default, button" asp-controller="Account" asp-action="Register">Create a Account</button>
                <button asp-area="" class="btn btn-default, button" asp-controller="Account" asp-action="ChangePassword">Forgot Your Password?</button>
            </div>
        </div>
       
    </div>
</form>
</div>

<style scoped>
    .navbar {
        display: none
    }
    .h2 {
        display: flex;
        justify-content: center;
        width: auto;
    }
    .button {
        background-color: magenta;
        color: white;
    }
    .margin-left1{
        margin-left: 05px;
    }
    .font-color{
        color: magenta;
    }
    .font-color2 {
        color: #00f6ed;
    }
    .border-color {
        border: ridge;
        border-color: #00f6ed;
    }
    #container {
        margin-top: 100px;
        background-color: darkslateblue;
        width: 50%;
        height: 75%;
        box-shadow: 05px 05px 05px purple;
    }
    #labels{
        padding-top: 10px;
        
    }
    #fields{
        padding: 10px;
    }
    .font-family {
        display: flex;
        justify-content: center;
        font-family: 'Racing Sans One', cursive;
        font-size: medium;
    }
</style>
