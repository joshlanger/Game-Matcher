@using WebApplication.Web.Models.Account;
@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}


@{
    if (TempData["Status"] != null)
    {
        <h4 class="font-color2 font-family">@TempData["Status"]</h4>

    };
}
<style> #header { display: none } </style>
<div id="container" class="border-color">
    <div class="row">
        <h2 class="h2 font-color">Login</h2>

        <form class="form-horizontal" asp-controller="account" asp-action="login" method="post">

            <div>
                <div class="col-sm-4">
                    <label id="labels" class="control-label font-color" asp-for="Email">Email:</label>
                </div>
                <div class="col-sm-4 text-right">
                    <input class="form-control" type="email" asp-for="Email" />
                    <span asp-validation-for="Email"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-4">
                    <label id="labels" class="control-label font-color" asp-for="Password">Password:</label>
                </div>
                <div class="col-sm-4 text-right">
                    <input id="fields" class="form-control" type="password" asp-for="Password" />
                    <span asp-validation-for="Password"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-offset-3 col-sm-push-3">
                    <input type="submit" value="Login" class="btn btn-default, button" />
                </div><br />
                <div class="col-sm-offset-3 col-sm-push-3">
                    <button asp-area="" class="btn btn-default, button" asp-controller="Account" asp-action="Register">Create a Account</button>
                </div>
                <br />
                <div class="col-sm-offset-3 col-sm-push-3">
                    <button asp-area="" class="btn btn-default, button" asp-controller="Account" asp-action="ChangePassword">Forgot Your Password?</button>
                </div>
            </div>

        </form>
    </div>
</div>

<style scoped>
    .navbar {
        display: none
    }
    .h2 {
        display: flex;
        justify-content: center;
        width: auto;
    }
    .button {
        background-color: magenta;
        color: white;
        width: 250px;
    }
    .margin-left1{
        margin-left: 05px;
    }
    .font-color{
        color: magenta;
    }
    .font-color2 {
        color: #00f6ed;
    }
    .border-color {
        border: ridge;
        border-color: #00f6ed;
    }
    #container {
        margin-top: 100px;
        background-color: darkslateblue;
        width: 50%;
        height: 75%;
        box-shadow: 05px 05px 05px purple;
    }
    #labels{
        padding-top: 10px;
        
    }
    #fields{
        padding: 10px;
    }
    .font-family {
        display: flex;
        justify-content: center;
        font-family: 'Racing Sans One', cursive;
        font-size: medium;
    }
</style>
