@using WebApplication.Web.Models.Account;
@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<h2 id="header" class="h2">Login</h2>

    <form id="user-login" class="form-horizontal" asp-controller="account" asp-action="login" method="post">

        <div class="form-group">
            <label class="control-label col-sm-5" asp-for="Email"></label>
            <input type="email" asp-for="Email" />
            <span asp-validation-for="Email"></span>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-5" asp-for="Password"></label>
            <input type="password" asp-for="Password" />
            <span asp-validation-for="Password"></span>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-5 col-sm-9">
                <input type="submit" value="Login" class="btn btn-default, button" />
            </div>
            <div class="col-sm-offset-5 col-sm-9">
                <a asp-area="" asp-controller="Account" asp-action="Register">Create a Account</a>
            </div>
        </div>
    </form>

<style>
    .h2{
        display: flex;
        justify-content: center;
        width: auto;
    }
    .button{
        background-color: dodgerblue;
        color: white;
    }
  
</style>
