@using WebApplication.Web.Models.Account;
@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}


@{
    if (TempData["Status"] != null)
    {
        <h4 class="font-color2 font-family">@TempData["Status"]</h4>

    };
}
<style>
    #header {
        display: none
    }
</style>

<form id="register" asp-controller="account" asp-action="register" method="get"></form>
<form id="help" asp-controller="home" asp-action="help" method="get"></form>

<div class="col-md-12">
    <form class="container border-color" asp-controller="account" asp-action="login" method="post">
        <div class="row">
            <h2 class="col-md-push-1 h2 font-color">Login</h2>
        </div>
        <div class="row">
            <div>
                @*<label id="labels" class="control-label font-color" asp-for="Email"></label>*@
            </div>

            <div class="col-md-4">
                <input type="email" asp-for="Email" placeholder=" Enter email" />
                <span asp-validation-for="Email"></span>
            </div>
        </div>
        <br />
        <div class="row">
            <div>
                @*<label id="labels" class="control-label font-color" asp-for="Password"></label>*@
            </div>

            <div class="col-md-4">
                <input type="password" asp-for="Password" placeholder=" Enter password" />
                <span asp-validation-for="Password"></span>
            </div>

        </div>
        <br />
        <div class="row">
            <div id="fields" class="col-md-4">
                <input type="submit" value="Login" class="btn btn-default, button" />
            </div>

        </div>
        <br />
        <div class="row">
            <div id="fields" class="col-md-4">
                <input type="submit" form="register" class="btn btn-default, button" value="Create an Account" />
            </div>

        </div>
        <br />
        
        <div class="row">
            <div id="fields" class="col-md-4">
                <input type="submit" form="help" class="btn btn-default, button" value="Help" />
            </div>
        </div>
    </form>
</div>


<style scoped>
    .col-md-4 {
        margin-left: 30px;
    }

    .navbar {
        display: none
    }

    .h2 {
        display: flex;
        justify-content: center;
    }

    .button {
        background-color: magenta;
        color: white;
        width: 180px;
    }

    .font-color {
        color: deepskyblue;
        font-weight: 600;
    }

    .font-color2 {
        color: #00f6ed;
    }

    .border-color {
        border: ridge;
        border-color: #00f6ed;
    }

    .container {
        margin-top: 55px;
        background-color: rgba(72, 61, 139, 0.50);
        width: 275px;
        height: auto;
        box-shadow: 05px 05px 05px purple;
    }



    #fields {
        margin-bottom: 05px;
    }
</style>
