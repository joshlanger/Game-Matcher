@using WebApplication.Web.Models.Account;
@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}


@{
    if (TempData["Status"] != null)
    {
        <h1>@TempData["Status"]</h1>

    };
}
<div id="container" class="container-fluid border-color">
<h2  class="h2 font-color">Login</h2>
<form class="form-horizontal" asp-controller="account" asp-action="login" method="post">

    <div class="form-group">
        <label id="labels" class="col-md-1 col-form-label col-form-label-md font-color" asp-for="Email">Email:</label>
            <div class="col-md-11">
                <input id="fields" type="email" class="form-control form-control-sm" asp-for="Email" />
                <span asp-validation-for="Email"></span>
            </div>
    </div>
    <div class="form-group">
       
        <label id="labels" class="col-md-1 col-form-label font-color" asp-for="Password">Password:</label>
            <div class="col-md-11">
                <input id="fields" type="password" class="form-control" asp-for="Password"/>
                <span asp-validation-for="Password"></span>
            </div>
        
    </div>
    <div class="form-group">
        <div class="col-md-1 col-form-label">
            <input type="submit" value="Login" class="btn btn-default, button" />
        </div>
        <div class="col-md-1 col-form-label">
            <button asp-area="" class="btn btn-default, button" asp-controller="Account" asp-action="Register">Create a Account</button>
        </div>
        <div class="col-sm-offset-5 col-sm-9">
            <a asp-area="" asp-controller="Account" asp-action="Register">Forgot Your Password?</a>
        </div>
    </div>
</form>
</div>

<style>
    .h2 {
        display: flex;
        justify-content: center;
        width: auto;
    }
    .button {
        background-color: magenta;
        color: white;
    }
    .font-color{
        color: magenta;
    }
    .border-color {
        border: ridge;
        border-color: #00f6ed;
    }
    #container {
        margin-top: 200px;
        background-color: darkslateblue;
        width: 50%;
        height: auto;
        box-shadow: 05px 05px 05px purple;
    }
    #labels{
        padding-top: 10px;
    }
    #fields{
        margin: 05px;
    }
</style>
