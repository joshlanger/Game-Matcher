@using WebApplication.Web.Models.Account;
@model ProfileViewModel
@{
    ViewData["Title"] = "Profile";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Theme Made By www.w3schools.com - No Copyright -->
    <title>Bootstrap Theme Simply Me</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
    <script src="https://kit.fontawesome.com/93cdb99303.js"></script>
</head>
<body>

    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
        </div>
    </div>

    <div>
        <a asp-area="" asp-controller="Account" asp-action="ProfileEdit"><i class="far fa-edit pull-left img-rounded"></i> Edit</a>
    </div>

    <!-- First Container -->
    <div class="container-fluid bg-1 text-center">

        <h3 class="margin">Username Profile</h3>

        <img src="~/images/sadspaceman.png" class="img-responsive img-circle margin" style="display:inline" alt="Avatar" width="250" height="250">
    </div>

    <!-- Second Container -->
    <div class="container-fluid bg-2 text-center">
        <h3 class="margin">About Me</h3>
        <p>Location: Somewhere, PA</p>
        <p>30 Friends</p>
    </div>

    <!-- Third Container (Grid) -->
    <div class="container-fluid bg-3 text-center">
        <h3 class="margin">Top 3 Games</h3><br>
        <div class="row">
            <div class="col-sm-4">
                <p>Lorem Ipsum</p>
                <img src="~/images/game1.jpg" class="img-responsive margin" style="width:100%" alt="Image">
            </div>
            <div class="col-sm-4">
                <p>Aamet Consectetu</p>
                <img src="~/images/game2.jpg" class="img-responsive margin" style="width:100%" alt="Image">
            </div>
            <div class="col-sm-4">
                <p>Elit Sed Tempor</p>
                <img src="~/images/game3.jpg" class="img-responsive margin" style="width:100%" alt="Image">
            </div>
        </div>
    </div>

</body>
</html>

<style>
    body {
        font: 20px Montserrat, sans-serif;
        line-height: 1.8;
        color: #0F1108;
    }

    p {
        font-size: 16px;
    }

    .margin {
        margin-bottom: 45px;
    }

    .bg-1 {
        background-color: #00F6ED; /* Turquoise */
        color: #0F1108;
    }

    .bg-2 {
        background-color: #0F1108; /* Smoky Black */
        color: #E5E5E5;
    }

    .bg-3 {
        background-color: #E5E5E5; /* Platinum */
        color: #0F1108;
    }

    .bg-4 {
        background-color: #0F1108; /* Black Gray */
        color: #E5E5E5;
    }

    .container-fluid {
        padding-top: 5%;
        padding-bottom: 5%;
    }

    .navbar {
        padding-top: 15px;
        padding-bottom: 15px;
        border: 0;
        border-radius: 0;
        margin-bottom: 0;
        font-size: 12px;
        letter-spacing: 5px;
    }

    .navbar-nav li a:hover {
        color: #FF7B00 !important; /* Heat Wave */
    }
</style>
