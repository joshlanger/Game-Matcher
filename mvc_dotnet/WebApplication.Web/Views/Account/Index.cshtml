@using WebApplication.Web.Models.Account;
@model ProfileViewModel
@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>

</head>

<body>
    <div class="container-fluid">
        <div class="row content">
            <div class="col-md-12 sidenav">
                <h4 class="col-md-offset-5 font-color">@Model.Username</h4>
                <img src="~/images/@(Model.UserId % 10).jpg" class="col-md-offset-5 img-circle" height="250" width="250" alt="Avatar">
                <br><br>
                <nav class="col-md-offset-4 row" id="myScrollspy">
                    <ul class="col-md-12 nav nav-pills nav-inline">
                        <li><a href="#section1" class="btn btn-default, button">My Games</a></li>
                        <li><a href="#section2" class="btn btn-default, button">My Friends</a></li>
                        <li><a href="#section3" class="btn btn-default, button">My Matches</a></li>
                        <li>
                            @*<input type="text" placeholder="Search...">
                            <span class="input-group-btn">
                                <button class="btn btn-default" type="button">
                                    <span class="glyphicon glyphicon-search">Search</span>
                                </button>
                            </span>*@
                        </li>
                    </ul>
                </nav>
            </div>
            <div class="col-md-12 container-fluid">

                <div id="section1" class="carousel slide" data-ride="carousel">

                    <h1 class="col-md-offset-5">My Games</h1>
                    <ol class="carousel-indicators">
                        <li data-target="#section1" data-slide-to="0"></li>
                        <li data-target="#section1" data-slide-to="1"></li>
                        <li data-target="#section1" data-slide-to="2"></li>
                    </ol>
                    <div  class="col-md-offset-4 carousel-inner child">
                        <div class="item active">
                            <img src="~/images/game1.jpg"/>
                        </div>
                        <div class="item">
                            <img src="~/images/game2.jpg"/>
                        </div>
                        <div class="item">
                            <img src="~/images/game3.jpg"/>
                        </div>
                    </div>
                    <a class="left carousel-control" href="#section1" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="right carousel-control" href="#section1" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
                <div id="section2" class="carousel slide" data-ride="carousel">
                    <h1 class="col-md-offset-5">My Matches</h1>
                    <ol class="carousel-indicators">
                        <li data-target="#section2" data-slide-to="0"></li>
                        <li data-target="#section2" data-slide-to="1"></li>
                        <li data-target="#section2" data-slide-to="2"></li>
                    </ol>
                    <div class="col-md-offset-4 carousel-inner">
                        <div class="item active">
                            <img src="~/images/0.jpg"/>
                        </div>
                        <div class="item">
                            <img src="~/images/1.jpg"/>
                        </div>
                        <div class="item">
                            <img src="~/images/2.jpg"/>
                        </div>
                    </div>
                    <a class="left carousel-control" href="#section2" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="right carousel-control" href="#section2" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
                <div id="section3" class="carousel slide" data-ride="carousel">
                    <h1 class="col-md-offset-5">My Matches</h1>
                    <ol class="carousel-indicators">
                        <li data-target="#section3" data-slide-to="0"></li>
                        <li data-target="#section3" data-slide-to="1"></li>
                        <li data-target="#section3" data-slide-to="2"></li>
                    </ol>
                    <div class="col-md-offset-4 carousel-inner">
                        <div class="item active">
                            <img src="~/images/4.jpg"/>
                        </div>
                        <div class="item">
                            <img src="~/images/5.jpg"/>
                        </div>
                        <div class="item">
                            <img src="~/images/6.jpg"/>
                        </div>
                    </div>
                    <a class="left carousel-control" href="#section3" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="right carousel-control" href="#section3" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>

            </div>

        </div>
    </div>
</body>
</html>

<style>
    body {
        font-family: 'Roboto', sans-serif;
    }
    .button {
        background-color: magenta;
        color: white;
    }
    .font-color{
        margin-top: 05px;
        font-family:Arial;
        color: white;
    }
    /* Set height of the grid so .sidenav can be 100% (adjust if needed) */
    .row.content {
        height: auto;
    }

    #justify-content {
        justify-content: center;
    }

    /* Set gray background color and 100% height */
    .sidenav {
        background-color: rgba(170, 254, 247, 0.30);
        height: 100%;
        z-index: 5;
    }

    /* Set black background color, white text and some padding */
    .footer {
        background-color: #555;
        color: white;
        padding: 15px;

    }
    ul.nav-pills {
        top: 20px;
        position: sticky;
        margin-bottom: 20px;
    }

    /*div.col-sm-9 div {
        height: 350px;
        font-size: 28px;
    }*/
    .row.content {
        height: auto;
    }

    ul.nav-pills {
        top: 20px;
        position: sticky;
    }

    div.col-sm-9 div {
        height: 350px;
        font-size: 28px;
    }
    .carousel-inner > .item > img {
        width: 25%;
        height: auto;
        box-shadow: 03px 03px 03px black;
        margin-bottom: 20px;
    }
    #section1 {
        color: #fff;
        background-color: rgba(79, 14, 202, 0.50);
    }

    #section2 {
        color: #fff;
        background-color: rgba(0, 255, 234, 0.50);
    }

    #section3 {
        color: #fff;
        background-color: rgba(9, 9, 128, 0.50);
    }

    /*/*810px previously*/
    /*media screen and (max-width:810px) {

        #section1, #section2, #section3
    }

    {
        margin-left: 150px;
    }*/
