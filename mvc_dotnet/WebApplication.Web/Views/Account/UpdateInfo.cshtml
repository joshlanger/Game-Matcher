@model User
@{
    ViewData["Title"] = "ChangeInfo";
}

<h2 class="h2">Update Your Account Information</h2>
<p></p>
<p></p>
<h4 class="h4">General</h4>

<form form id="" class="form-horizontal" asp-controller="account" asp-action="updateinfo" method="post">
    <div>
        <input type="hidden" asp-for="Id" value="@Model.Id" />
    </div>
    <div class="form-group">
        <label class="control-label col-sm-5" asp-for="Username">Username</label>
        <input asp-for="Username" value="@Model.Username" />
    </div>
    <div class="form-group">
        <label class="control-label col-sm-5" asp-for="Email">Email</label>
        <input type="email" asp-for="Email" value="@Model.Email" />
        <span asp-validation-for="Email"></span>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-5" asp-for="ZipCode">Zip Code</label>
        <input asp-for="ZipCode" value="@Model.ZipCode" />
    </div>
    <div class="form-group">
        <div class="col-sm-offset-5 col-sm-10">
            <input type="submit" value="Save Changes" class="btn btn-default, button" />
        </div>
    </div>
</form>

<form asp-controller="Account" asp-action="ChangePassword" method="get">
    <div>
        <input type="hidden" asp-for="Id" value="@Model.Id"/>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-5 col-sm-10">
            <input type="submit" value="Change Password" class="btn btn-default button" />
        </div>
    </div>
</form>

<form asp-controller="Account" asp-action="DeleteAccount" method="post">
    <input type="hidden" asp-for="Id" value="@Model.Id"/>
    <div class="col-sm-offset-5 col-sm-10">
        <input type="submit" value="Delete Account" class="btn btn-danger"/>
    </div>
    
</form>

