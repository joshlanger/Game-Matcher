@model User
@{
    ViewData["Title"] = "ChangeInfo";
}
<div class="col-md-12">
    
    <div id="container" class="col-md-pull-1 container border-color">
        <form asp-controller="account" asp-action="updateinfo" method="post">
            <div class="row">
                <h2 class="col-md-push-1 h2 font-color font-size">Update Your Account</h2>
            </div>
            @*<h4 class="h2 font-color font-size">General</h4*@
            <div class="row">
                <div class="col-md-4">
                    <input type="hidden" asp-for="Id" value="@Model.Id" />
                </div>
            </div>

            <div class="row">
                @*<label class="col-sm-4 col-md-4 col-lg-4 control-label font-color" asp-for="Username">Username</label>*@
                <div class="col-md-4">
                    <input id="fields" asp-for="Username" value="@Model.Username" placeholder="Enter Username" />
                </div>
            </div>
            <div class="row">
                @*<label class="col-sm-4 control-label font-color" asp-for="Email">Email</label>*@
                <div class="col-md-4">
                    <input id="fields" type="email" asp-for="Email" value="@Model.Email" placeholder="Enter Email" />
                    <span asp-validation-for="Email"></span>
                </div>

            </div>
            <div class="row">
                @*<label class="col-sm-4 control-label font-color" asp-for="ZipCode">Zip Code</label>*@
                <div class="col-md-4">
                    <input id="fields" asp-for="ZipCode" value="@Model.ZipCode" placeholder="Enter ZipCode" />
                </div>

            </div>
            <div class="row">
                <div class="col-md-4">
                    <input id="fields" type="submit" value="Save Changes" class="btn btn-default, button" />
                </div>
            </div>
        </form>

        <form class="col-md-pull-1" asp-controller="Account" asp-action="ChangePassword" method="get">
            <div>
                <input type="hidden" asp-for="Id" value="@Model.Id" />
            </div>
            <div class="row">
                <div class="col-md-4">
                    <input id="fields" type="submit" value="Change Password" class="btn btn-block, button" />

                </div>
            </div>
        </form>

        <form class="col-md-pull-1" asp-controller="Account" asp-action="DeleteAccount" method="post">
            <div>
                <input type="hidden" class="form-control" asp-for="Id" value="@Model.Id" />
                <input type="hidden" class="form-control" asp-for="Username" value="@Model.Username" />
            </div>
            <div class="row">
                <div class="col-md-4">
                    <input id="fields" type="submit" value="Delete Account" class="btn btn-block, btn-sm button" />
                    <br />
                </div>
               
            </div>

        </form>
    </div>
</div>
