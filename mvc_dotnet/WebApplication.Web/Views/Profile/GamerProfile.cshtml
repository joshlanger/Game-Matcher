@using WebApplication.Web.Models.Account;
@model ProfileViewModel
@{
    ViewData["Title"] = "GamerProfile";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Theme Made By www.w3schools.com - No Copyright -->
    <title>Bootstrap Theme Simply Me</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
    <script src="https://kit.fontawesome.com/93cdb99303.js"></script>
</head>
<body>
    <!-- First Container -->
    <div class="container-fluid bg-1 text-center">
        <h3 class="margin">@Model.Username</h3>

        @if (Model.IsPopulated)
        {
            <div class="margin">
                @foreach (var gamer in Model.MatchStrength)
                {
                    if (gamer.ProfileId == Model.ProfileId)
                    {

                        <h3> @gamer.MatchStrength % Match</h3>
                    }
                }
            </div>

        }

        <img src="~/images/@(Model.UserId % 10).jpg" class="img-responsive img-circle margin" style="display:inline" alt="Avatar" width="250" height="250">
    </div>

    <!-- Second Container -->
    <div class="container-fluid bg-2 text-center">
        <h3 class="margin">@Model.Username's Infomania</h3>
        <p class="col-sm-4">Stuff about me: @Model.UserBio</p>
        <p class="col-sm-4">Get a hold of me: @Model.ContactPreference</p>
        <p class="col-sm-4">Level of Gaming Experience: @Model.GamingExperience</p>
        <p class="col-sm-4">
            Preferred Genres: <br />
            @foreach (Genre genre in Model.GenreNames)
            {
                @genre.genre<br />
            }
           
        </p>
        <p class="col-sm-4">
            Games I Play: <br />
            @foreach (Game game in Model.GameTitles)
            {
                @game.title<br />
            }
        </p>
        <p class="col-sm-4">I like other things, too: @Model.OtherInterests</p>
        
        @*<p class="col-sm-4">Location: @Model.ZipCode</p>

        <form id="container" class="container border-color" asp-controller="Zip" asp-action="GetZipDistance" method="get" style="justify-content:center">
            <label asp-for="@Model.ZipCode" class="font-color">Search</label>
            <input id="fields" type="submit" value="Calculate Distance" class="btn btn-default, button" />
        </form>
        <a asp-area="" class="font-color col-md-offset-2" asp-controller="Zip" asp-action="GetZipDistance">Calculate Distance</a>
        <a asp-controller="Zip" asp-action="GetZipDistance" asp-route="@Model.ZipCode">Calculate Distance</a>*@
    </div>

    <!-- Third Container (Grid) -->
    <div class="container-fluid bg-3 text-center">
        <h3 class="margin">Top 3 Games</h3><br>
        <div class="row">
            <div class="col-sm-4">
                <img src="~/images/@Model.GameTitles[0].image" class="img-responsive margin" style="width:100%" alt="Image">
            </div>
            <div class="col-sm-4">
                <img src="~/images/@Model.GameTitles[1].image" class="img-responsive margin" style="width:100%" alt="Image">
            </div>
            <div class="col-sm-4">
                <img src="~/images/@Model.GameTitles[2].image" class="img-responsive margin" style="width:100%" alt="Image">
            </div>
        </div>
    </div>

</body>
</html>

<script src="~/js/site.js"></script>

<style>
    body {
        font-family: 'Roboto', sans-serif;
        font: 20px;
        line-height: 1.8;
        color: #0F1108;
    }

    p {
        font-size: 16px;
    }

    .margin {
        margin-bottom: 45px;
    }

    .bg-1 {
        background-color: #00F6ED; /* Turquoise */
        color: #0F1108;
    }

    .bg-2 {
        background-color: #0F1108; /* Smoky Black */
        color: #E5E5E5;
    }

    .bg-3 {
        background-color: #E5E5E5; /* Platinum */
        color: #0F1108;
    }

    .bg-4 {
        background-color: #0F1108; /* Black Gray */
        color: #E5E5E5;
    }

    .container-fluid {
        padding-top: 5%;
        padding-bottom: 5%;
    }
</style>

